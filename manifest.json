{
    "manifest_version": 3,
    "name": "Skip 'n Chill",
    "version": "1.0",
    "description": "Automatically clicks the 'Skip Intro' and 'Next Episode' button when watching videos.",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.netflix.com/*",
          "*://*.primevideo.com/*",
          "*://*.hotstar.com/*"
        ],
        "js": ["content.js"]
      }
    ]
  }
  